# ============================================================
# ROOT .env  —  copy this to .env and fill in your values
# All backend environment variables go here.
# ============================================================

# ─── WhatsApp Business API ───────────────────────────────────
# From Meta Business Dashboard → App → WhatsApp → API Setup
WHATSAPP_TOKEN=your_permanent_access_token_here
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id
WABA_ID=your_business_account_id

# ─── Webhook ─────────────────────────────────────────────────
# Any random string — must match what you set in Meta App Dashboard
WEBHOOK_VERIFY_TOKEN=my_secure_verify_token_12345

# App Secret from Meta App Dashboard → Settings → Basic
APP_SECRET=your_app_secret_here

# ─── Bot integration (cardiot-bot forwards webhooks here) ────
# Set to the public URL of your cardiot-bot webhook endpoint
# Example: http://YOUR_VPS_IP:3002/webhook
BOT_WEBHOOK_URL=http://YOUR_VPS_IP:3002/webhook

# ─── Server ──────────────────────────────────────────────────
PORT=3001
NODE_ENV=production

# ─── Supabase ────────────────────────────────────────────────
# From: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ─── Dashboard Auth (future use) ─────────────────────────────
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=change_this_to_something_strong
